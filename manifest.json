{
    "manifest_version": 3,
    "name": "Criptalia Auto Invest",
    "description": "Automatically invest on Criptalia projects when they open.",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
       "128": "icons/128.png"
    },
    "version": "1.0.0",
    "author": "Eugross",
    "content_scripts": [
        {
            "matches": ["https://*.criptalia.com/*"],
            "js": ["libs/popper.min.js", "libs/tippy-bundle.umd.min.js", "js/invest.js"],
            "run_at": "document_idle"
        }
    ]
}
